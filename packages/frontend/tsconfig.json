{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "allowJs": false,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
